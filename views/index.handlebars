<div class="container">
    <div class="row">
        <div class="col-md-12 text-center" id="top-bar">
            <img src="/assets/images/Burgers9.jpg" alt="burger" width = "200px"/>
            <h1> Eat-Da-Burger! </h1>
        </div>
        <div class="col-md-6" class="task">
            <ol class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <li>
                <span class="col-md-8 ">
                     {{this.burger_name}}
					
                    <!-- {{this.Date}} -->
                </span>
                <span class="col-md-2 text-center">
                    <button type="submit" class="btn btn-default devour-btn" value={{this.id}} data-devored= {{this.devoured}}>Devour it!</button>
                </span>
                </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <ol class="col-md-6" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <li>
            {{this.burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </ol>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center enter_section">
            <form>
                <input type="text" class="form-control devour-form" name="burger_name" value="" id="enter_text">
                <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
            <p>Enter a burger you want to eat Click the "Submit" button.</p>
        </div>
    </div>
</div>